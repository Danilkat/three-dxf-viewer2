{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [ "error", "tab" ],
        "linebreak-style": [ "error", "windows" ],
        "quotes": [ "error", "single" ],
        "semi": [ "error", "always" ],
        "no-async-promise-executor": "off",        
        "space-in-parens": ["error", "always"],
        "object-curly-spacing": ["error", "always" ],
        "array-bracket-spacing": ["error", "always" ]
    }
}
